{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "build/es5",
    "sourceMap": false,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "@uirouter/core": ["@uirouter/core/src"],
      "@uirouter/rx": ["@uirouter/rx/src/index.typedoc"]
    }
  },
  "typedoc": {
    "publishDir": "_ng2_docs",
    "include": [
      {
        "package": "@uirouter/core",
        "repo": "https://github.com/ui-router/core.git",
        "entry": "src/index.ts"
      },
      {
        "package": "@uirouter/rx",
        "repo": "https://github.com/ui-router/rx.git",
        "entry": "src/index.typedoc.ts"
      }
    ],
    "generateOptions": {
      "tsconfig": "tsconfig.typedoc.json",
      "readme": "README.md",
      "name": "@uirouter/angular",
      "theme": "node_modules/ui-router-typedoc-themes/bin/default",
      "out": "_doc",
      "internal-aliases": "internal,publicapi,ng2api",
      "external-aliases": "external,internalapi",
      "navigation-label-globals": "@uirouter/angular"
    }
  }
}
